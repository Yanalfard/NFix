@model DataLayer.Models.Regular.TblTutor

<div class="tutor column center uk-margin-auto" id="InfoTutor">
    <img class="uk-margin-auto uk-border-circle" id="tutorProfileImage" src="/Resources/Tutor/Thumb/@Model.MainImage" />
    <h4 class="uk-margin-auto uk-margin-small-top uk-margin-remove-bottom">@Model.Name</h4>

    <h6 class="uk-margin-auto uk-margin-small-top">@Model.Specialty</h6>
    <div class="row uk-margin-auto">
        <a href="#ModalUpload" uk-toggle uk-tooltip="آپلود ویدیوئ جدید" uk-icon="icon:cloud-upload;ratio:1.2"></a>
        <span class="unselectable uk-margin-small-left uk-margin-small-right">•</span>
        <a href="#ModalProfile" uk-toggle uk-tooltip="ویرایش اطلاعات کاربری" uk-icon="icon:user;ratio:1.2"></a>
        <span class="unselectable uk-margin-small-left uk-margin-small-right">•</span>
        <a href="#ModalTable" uk-toggle uk-tooltip="مشاهده ویدیو های آپلودی" uk-icon="icon:menu;ratio:1.2"></a>
        <span class="unselectable uk-margin-small-left uk-margin-small-right">•</span>
        <a href="#" uk-tooltip="تغییر گذرواژه" onclick="editPass()" uk-icon="icon:lock;ratio:1.2"></a>
        <span class="unselectable uk-margin-small-left uk-margin-small-right">•</span>
        <a href="#ModalAddLive" uk-tooltip="آپلود لایو" uk-toggle uk-icon="icon:rss;ratio:1.2"></a>
        <span class="unselectable uk-margin-small-left uk-margin-small-right">•</span>
        <a href="#ModalLives" uk-tooltip="ویدیو های لایو" uk-toggle uk-icon="icon:list;ratio:1.2"></a>
    </div>
</div>

<div id="ModalLives" uk-modal>
    <div class="uk-modal-dialog uk-modal-body full-width column" dir="rtl">
        <h2 class="uk-modal-title">ویدیو های آپلودی</h2>

        <table class="uk-table" dir="rtl">
            <thead>
                <tr>
                    <th></th>
                    <th>تیتر</th>
                    <th>عکس</th>
                    <th>توضیحات کوناه</th>
                    <th>توضیحات کامل</th>
                    <th>زمان شروع</th>
                    <th>قیمت</th>
                </tr>
            </thead>
            <tbody>
            <tr>
                <td>1</td>
                <td>این تیتر می باشد</td>
                <td>
                    <div uk-lightbox>
                        <a href="/Resources/Videos/">نام عکس</a>
                    </div>
                </td>
                <td>
                    <a href="#Modal-Description" uk-toggle>توضیحات</a>
                    <div id="Modal-Description" uk-modal>
                        <div class="uk-modal-dialog uk-modal-body">
                            <h3>
                                توضیحات ویدیو
                            </h3>
                            <p>
                            </p>
                            <button class="uk-modal-close">
                                بستن
                            </button>
                        </div>
                    </div>
                </td>
                <td>
                    <a href="#Modal-Description-Demo" uk-toggle>توضیحات دمو</a>
                    <div id="Modal-Description-Demo" uk-modal>
                        <div class="uk-modal-dialog uk-modal-body">
                            <h3>
                                این توضیحات دمو می باشد
                            </h3>
                            <p>
                            </p>
                            <button class="uk-modal-close">
                                بستن
                            </button>
                        </div>
                    </div>
                </td>
                <td>1399/02/02</td>
                <td>19000</td>
            </tr>
            </tbody>
        </table>
        <a class="uk-button uk-button-default uk-margin-auto-bottom uk-margin-auto-left"
           onclick="UIkit.modal(document.getElementById('ModalTable')).hide();">بازگشت</a>
    </div>
</div>

<div id="ModalAddLive" uk-modal>
    <div class="uk-modal-dialog uk-modal-body full-width">
        <h2 class="uk-modal-title">لایو جدید</h2>

        <!-- #region Card -->

        <form action="/Tuotor/Profile/CreateLive" method="post" enctype="multipart/form-data"
              class="uk-padding-small column">

            <h4 class="uk-margin-remove-bottom">
                لایو جدید
            </h4>
            <label for="Title" class="uk-margin-small-bottom uk-margin-top">
                تیتر پخش زنده
            </label>
            <input name="Title" type="text" id="Title" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

            <label for="Channel" class="uk-margin-small-bottom uk-margin-top">
                کانال
            </label>
            <input name="Chanel" type="text" id="Chanel" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

            <!-- #region Upload Image -->
            <label class="uk-margin-small-bottom uk-margin-top">
                عکس
            </label>
            <div class="js-upload uk-placeholder uk-margin-remove-top uk-text-center" dir="rtl">
                <span uk-icon="icon: cloud-upload"></span>
                <span class="uk-text-middle"> عکس خود را اینجا بیاندازید و یا</span>
                <div uk-form-custom>
                    <input type="file" name="MainImage" multiple>
                    <span class="uk-link">انتخاب کنید</span>
                </div>
            </div>

            <!-- #endregion -->

            <label for="DescriptionShort" class="uk-margin-small-bottom uk-margin-top">
                توضیحات کوتاه
            </label>
            <textarea name="DescriptionShort" id="DescriptionShort"></textarea>

            <label for="DescriptionLong" class="uk-margin-small-bottom uk-margin-top">
                توضیحات کامل
            </label>
            <textarea name="DescriptionLong" id="DescriptionLong"></textarea>

            <label for="TimeStart" class="uk-margin-small-bottom uk-margin-top">
                زمان شروع
            </label>
            <input name="TimeStart" type="datetime-local" id="TimeStart" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

            <label for="Price" class="uk-margin-small-bottom uk-margin-top">
                قیمت
            </label>
            <input name="Price" type="number" id="Price" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

            <div class="row uk-margin-auto-left uk-margin-small-top">
                <label for="IsHome" class="uk-margin-small-right">در صفحه اصلی قرار دارد</label>
                <input name="IsHome" type="checkbox" id="IsHome" class="uk-checkbox  uk-margin-auto-top uk-margin-auto-bottom" value="" />
            </div>

            <progress id="js-progressbar" class="uk-progress" value="0" max="100" hidden></progress>
            <button class="see uk-margin-medium-top uk-margin-auto-left">اضافه</button>
        </form>
        <!-- #endregion -->

    </div>
</div>
