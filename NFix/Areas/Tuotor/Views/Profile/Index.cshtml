
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Project Css -->
<link href="~/Styles/Video.min.css" rel="stylesheet" />
<link href="~/Styles/Profile.min.css" rel="stylesheet" />

<div class="space-nav-bottom"></div>

<div class="tutor column center uk-margin-auto">
    <img class="uk-margin-auto uk-border-circle" src="https://picsum.photos/128" />
    <h4 class="uk-margin-auto uk-margin-small-top uk-margin-remove-bottom">نام و نام خانوادگی مربی</h4>
    <h6 class="uk-margin-auto uk-margin-small-top">تخصص ورزشی</h6>
    <div class="row uk-margin-auto">
        <a href="#ModalUpload" uk-toggle uk-tooltip="آپلود ویدیوئ جدید" uk-icon="icon:cloud-upload;ratio:1.2"></a>
        <span class="unselectable uk-margin-small-left uk-margin-small-right">•</span>
        <a href="#ModalProfile" uk-toggle uk-tooltip="ویرایش اطلاعات کاربری" uk-icon="icon:user;ratio:1.2"></a>
        <span class="unselectable uk-margin-small-left uk-margin-small-right">•</span>
        <a href="#ModalTable" uk-toggle uk-tooltip="مشاهده ویدیو های آپلودی" uk-icon="icon:menu;ratio:1.2"></a>
    </div>
</div>

<!-- #region Upload -->

<div id="ModalUpload" uk-modal>
    <div class="uk-modal-dialog uk-modal-body full-width">
        <h2 class="uk-modal-title">آپلود ویدیوی جدید</h2>
        <form action="/Admin/Video/VideoAdder" method="post" enctype="multipart/form-data" class="column">
            <h4 class="uk-margin-remove-bottom">
                ویدیو جدید

            </h4>
            <label for="Title" class="uk-margin-small-bottom uk-margin-top">
                تیتر ویدیو
            </label>
            <input type="text" id="Title" name="Title" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" required />
            <label for="Description" class="uk-margin-small-bottom uk-margin-top">
                توضیحات
            </label>
            <textarea id="Description" name="Description" required></textarea>


            <!-- #region Upload Video -->
            <label class="uk-margin-small-bottom uk-margin-top">
                ویدیو
            </label>
            <div class=" uk-placeholder uk-margin-remove-top uk-text-center" dir="rtl">
                <span uk-icon="icon: cloud-upload"></span>
                <span class="uk-text-middle"> ویدیوی خود را اینجا بیاندازید و یا</span>
                <div uk-form-custom>
                    <input type="file" name="VideoUrl" multiple required>
                    <span class="uk-link">انتخاب کتید</span>
                </div>
            </div>

            <!-- #endregion -->
            <!-- #region Upload Image -->
            <label class="uk-margin-small-bottom uk-margin-top">
                عکس
            </label>
            <div class="uk-placeholder uk-margin-remove-top uk-text-center" dir="rtl">
                <span uk-icon="icon: cloud-upload"></span>
                <span class="uk-text-middle"> عکس خود را اینجا بیاندازید و یا</span>
                <div uk-form-custom>
                    <input type="file" name="MainImage" multiple required>
                    <span class="uk-link">انتخاب کتید</span>
                </div>
            </div>

            <!-- #endregion -->
            @*<div class="row uk-margin-auto-left">
                    <label for="IsOnline" class="uk-margin-small-right">آنلاین می باشد</label>
                    <input type="checkbox" id="IsOnline" value="true" name="IsOnline" class="uk-checkbox uk-margin-auto-top uk-margin-auto-bottom" />
                </div>

                <div class="row uk-margin-auto-left uk-margin-small-top">
                    <label for="IsHome" class="uk-margin-small-right">در صفحه اصلی قرار دارد</label>
                    <input type="checkbox" id="IsHome" name="IsHome" value="true" class="uk-checkbox  uk-margin-auto-top uk-margin-auto-bottom" />
                </div>*@

            <h5 class="uk-margin-remove-bottom">
                بخش دمو
            </h5>
            <hr />

            <!-- #region Upload Video -->
            <label class="uk-margin-small-bottom uk-margin-top">
                ویدیوئ دمو
            </label>
            <div class=" uk-placeholder uk-margin-remove-top uk-text-center" dir="rtl">
                <span uk-icon="icon: cloud-upload"></span>
                <span class="uk-text-middle"> ویدیوی خود را اینجا بیاندازید و یا</span>
                <div uk-form-custom>
                    <input type="file" name="VidioDemoUrl" multiple required>
                    <span class="uk-link">انتخاب کتید</span>
                </div>
            </div>
            <!-- #endregion -->

            <label for="Description" class="uk-margin-small-bottom uk-margin-top">
                توضیحات دمو
            </label>
            <textarea id="Description" name="DescriptionDemo" required></textarea>

            <progress id="js-progressbar" class="uk-progress" value="0" max="100" hidden></progress>
            <div class="row uk-margin-medium-top" dir="rtl">
                <button type="submit" class="see">آپلود</button>
                <a class="uk-button uk-button-default uk-margin-auto-bottom uk-margin-auto-left uk-margin-right "
                   onclick="UIkit.modal(document.getElementById('ModalUpload')).hide();">بازگشت</a>
            </div>
        </form>
    </div>
</div>

<!-- #endregion -->
