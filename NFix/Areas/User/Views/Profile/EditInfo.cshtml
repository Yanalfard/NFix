@model DataLayer.Models.Regular.TblClient
    <div id="Modal-Edit" uk-modal>
        <div class="card column">
            <h2 class="uk-modal-title">
                ویرایش پروفایل
            </h2>
            <div class="row">
                <div class="column uk-margin-auto-left">
                    <label>
                        نام و نام خانوادگی
                    </label>
                    <input type="text" value="@Model.Name" />
                    <label>
                        گذرواژه
                    </label>
                    <input type="password" value="ThisIsMyPassword" />
                </div>
                <div class="column uk-margin-auto-left">
                    <label>
                        نام کاربری
                    </label>
                    <input type="text" value="@Model.TblUserPass.Username" />
                    <label>
                        رایانامه
                    </label>
                    <input type="email" value="@Model.Email" />
                    <label>
                        شماره تلفن
                    </label>
                    <input type="tel" value="@Model.TellNo" />
                </div>
            </div>
            <label>
                آدرس
            </label>
            <textarea>
    @Model.Address
                </textarea>
            <label>
                کد پستی
            </label>
            <input type="text" value=" @Model.PostalCode" />
            <div class="row uk-margin-top">
                <button class="uk-modal-close uk-button-default uk-margin-auto-left uk-margin-right" type="button">
                    بازگشت
                </button>
                <button class="uk-modal-close" type="button">
                    ویرایش
                </button>
            </div>
        </div>
    </div>


