@model IEnumerable<DataLayer.Models.Regular.TblCatagory>
@{
    ViewBag.Title = "BlogAdder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- #region Table -->

<table class="uk-table" dir="rtl">
    <caption>

    </caption>
    <thead>
        <tr>
            <th></th>
            <th>سرگروه</th>
            <th>زیر گروه ها</th>
            <th>
                <button onclick="Create()">
                    سرگروه جدید
                </button>
            </th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr id="group_@(item.id)">
                <td>
                    @(Model.ToList().IndexOf(item)+1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.TblCatagory1.Any())
                    {
                        <ul class="column inner-ul">
                            @foreach (var subGroup in item.TblCatagory1)
                            {


                                <li class="row uk-margin-small-top" id="group_@(subGroup.id)">
                                    <span class="uk-margin-small-left"> @subGroup.Name</span>
                                    <div class="row uk-margin-auto-right">
                                        <a href="#" uk-icon="icon:file-edit" onclick="Edit(@subGroup.id)"></a>
                                        <a href="#" uk-icon="icon:trash" onclick="Delete(@subGroup.id)"></a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </td>

                <td class="row">
                    <a href="#" uk-icon="icon:plus" onclick="Create(@item.id)"></a>
                    <a href="#" uk-icon="icon:file-edit" onclick="Edit(@item.id)"></a>
                    <a href="#" uk-icon="icon:trash" onclick="Delete(@item.id)"></a>
                </td>
            </tr>
        }





    </tbody>
</table>

<!-- #endregion -->
