
@{
    ViewBag.Title = "ProductAdder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- #region Card -->

<form action="/Admin/Video/VideoAdder" method="post" enctype="multipart/form-data" class="mat uk-margin-large-top uk-padding-small column clipped">
    <h4 class="uk-margin-remove-bottom">
        کالا جدید
    </h4>
    <label for="Title" class="uk-margin-small-bottom uk-margin-top">
        نام کالا
    </label>
    <input type="text" id="Title" name="Title" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" required />

    <label for="Price" class="uk-margin-small-bottom uk-margin-top">
        قیمت کالا
    </label>
    <input type="number" id="Price" name="Price"
           class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" required />

    <label for="Discount" class="uk-margin-small-bottom uk-margin-top">
        تخفیف
    </label>
    <input type="number" id="Discount" name="Discount"
           class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" required />

    <label for="Category" class="uk-margin-small-bottom uk-margin-top">
        دسته بندی
    </label>
    <select class="uk-select uk-input uk-width-2-3 @("uk-width-1-3@m") uk-margin-auto-right" dir="rtl" required>
        <option>دسته بندی اول</option>
        <option>دسته بندی دوم</option>
        <option>دسته بندی سوم</option>
    </select>

    <label for="Count" class="uk-margin-small-bottom uk-margin-top">
        تعداد
    </label>
    <input type="number" id="Count" name="Count"
           class="uk-input uk-width-1-3 @("uk-width-1-4@m") uk-margin-auto-left" required />

    <label for="Description" class="uk-margin-small-bottom uk-margin-top">
        توضیح مختصر
    </label>
    <textarea id="Description" name="Description" required></textarea>

    <label for="Body" class="uk-margin-small-bottom uk-margin-top">
        محتوای وبلاگ
    </label>
    @* CK Editor *@
    <textarea id="Body" name="Body" required></textarea>

    <!-- #region Upload Image -->
    <label class="uk-margin-small-bottom uk-margin-top">
        عکس
    </label>
    <div class="uk-placeholder uk-margin-remove-top uk-text-center" dir="rtl">
        <span uk-icon="icon: cloud-upload"></span>
        <span class="uk-text-middle"> عکس خود را اینجا بیاندازید و یا</span>
        <div uk-form-custom>
            <input type="file" name="MainImage" multiple required>
            <span class="uk-link">انتخاب کتید</span>
        </div>
    </div>
    <!-- #endregion -->

    <div class="row uk-margin-auto-left">
        <label for="IsOnline" class="uk-margin-small-right">مرئی می باشد</label>
        <input type="checkbox" id="IsOnline" value="true" name="IsOnline" class="uk-checkbox uk-margin-auto-top uk-margin-auto-bottom" />
    </div>

    <div class="row uk-margin-auto-left uk-margin-small-top">
        <label for="IsHome" class="uk-margin-small-right">در صفحه اصلی قرار دارد</label>
        <input type="checkbox" id="IsHome" name="IsHome" value="true" class="uk-checkbox  uk-margin-auto-top uk-margin-auto-bottom" />
    </div>

    <progress id="js-progressbar" class="uk-progress" value="0" max="100" hidden></progress>
    <button type="submit" class="see uk-margin-medium-top uk-margin-auto-left">ذخیره</button>
</form>

<div class="space"></div>

<!-- #endregion -->

<script>
        var bar = document.getElementById('js-progressbar');

        UIkit.upload('.js-upload', {

            //------------------------------------------------------ {{ U R L }}
            url: '',
            multiple: false,

            beforeSend: function () {
                console.log('beforeSend', arguments);
                alert('قبل از شروع آپلود');
            },
            beforeAll: function () {
                console.log('beforeAll', arguments);
            },
            load: function () {
                console.log('load', arguments);
            },
            error: function () {
                console.log('error', arguments);
            },
            complete: function () {
                console.log('complete', arguments);
            },

            loadStart: function (e) {
                console.log('loadStart', arguments);

                bar.removeAttribute('hidden');
                bar.max = e.total;
                bar.value = e.loaded;
            },

            progress: function (e) {
                console.log('progress', arguments);

                bar.max = e.total;
                bar.value = e.loaded;
            },

            loadEnd: function (e) {
                console.log('loadEnd', arguments);

                bar.max = e.total;
                bar.value = e.loaded;
            },

            completeAll: function () {
                console.log('completeAll', arguments);

                setTimeout(function () {
                    bar.setAttribute('hidden', 'hidden');
                }, 1000);

                alert('آپلود شد');
            }

        });
</script>



