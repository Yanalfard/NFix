@using DataLayer.Models.Regular
@model DataLayer.Models.Regular.TblLive
@{
    ViewBag.Title = "LiveAdder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- #region Card -->

<form action="/Admin/Live/SubmitLiveEdit" method="post" enctype="multipart/form-data" class="mat uk-margin-large-top uk-padding-small column clipped">
    <input type="hidden" name="MainImage" value="@Model.MainImage" />
    <input type="hidden" name="id" value="@Model.id" />
    <h4 class="uk-margin-remove-bottom">
        لایو جدید
    </h4>
    <label for="Title" class="uk-margin-small-bottom uk-margin-top">
        تیتر پخش زنده
    </label>
    <input name="Title" value="@Model.Title" type="text" id="Title" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

    <label for="Channel" class="uk-margin-small-bottom uk-margin-top">
        کانال
    </label>
    <input name="Chanel" value="@Model.Chanel" type="text" id="Chanel" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

    <!-- #region Upload Image -->
    <label class="uk-margin-small-bottom uk-margin-top">
        عکس
    </label>
    @*<img src="~/Resources/Live/Image/8bcc6437-4b7b-42dc-8aed-283536320ad8.png" height= "100" width=" 100" />*@
    <img src="/Resources/Live/Image/@Model.MainImage" height= "100" width=" 100"/>
    <div class="js-upload uk-placeholder uk-margin-remove-top uk-text-center" dir="rtl">
        <span uk-icon="icon: cloud-upload"></span>
        <span class="uk-text-middle"> عکس خود را اینجا بیاندازید و یا</span>
        <div uk-form-custom>
            <input type="file" name="MainImage" multiple>
            <span class="uk-link">انتخاب کنید</span>
        </div>
    </div>

    <!-- #endregion -->

    <label for="DescriptionShort" class="uk-margin-small-bottom uk-margin-top">
        توضیحات کوتاه
    </label>
    <textarea name="DescriptionShort" id="DescriptionShort">@Model.DescriptionShort</textarea>

    <label for="DescriptionLong" class="uk-margin-small-bottom uk-margin-top">
        توضیحات کامل
    </label>
    <textarea name="DescriptionLong" id="DescriptionLong">@Model.DescriptionLong</textarea>

    <label for="TimeStart" class="uk-margin-small-bottom uk-margin-top">
        زمان شروع
    </label>
    <input name="TimeStart" value="@Model.TimeStart" type="datetime" id="TimeStart" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

    <label for="Price" class="uk-margin-small-bottom uk-margin-top">
        قیمت
    </label>
    <input name="Price" value="@(Model.Price ?? 0)" type="number" id="Price" class="uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-left" />

    <div class="row uk-margin-auto-left uk-margin-small-top">
        <label for="IsHome" class="uk-margin-small-right">در صفحه اصلی قرار دارد</label>
        <input type="checkbox" id="IsHome" name="IsHome" value="true" class="uk-checkbox  uk-margin-auto-top uk-margin-auto-bottom" @((Model.IsHome) ? "checked" : "") />

    </div>

    <label for="Tuotors" class="uk-margin-top uk-margin-small-right uk-margin-small-bottom">مربی</label>
    <select name="ToutorId" id="Tuotors" dir="rtl" class="uk-select uk-input uk-width-2-3 @("uk-width-1-3@m")  uk-margin-auto-right">
        @foreach (TblTutor i in ViewBag.Tutors)
        {
            <option value="@i.id">@i.Name</option>
        }
    </select>

    <progress id="js-progressbar" class="uk-progress" value="0" max="100" hidden></progress>
    <button class="uk-margin-medium-top uk-margin-auto-left">ویرایش</button>
</form>
<!-- #endregion -->
