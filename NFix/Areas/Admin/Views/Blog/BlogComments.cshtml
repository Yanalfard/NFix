<script>
    function viewClientInfo(id) {
        $.get("/Admin/Blog/ViewClientInfo/" + id, function (result) {
            UIkit.modal(document.getElementById('modal-example')).show();
            $(".uk-modal-body").html(result);
        });
    };

</script>
