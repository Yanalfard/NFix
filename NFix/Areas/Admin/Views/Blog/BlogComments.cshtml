@model IEnumerable<DataLayer.Models.Regular.TblComment>
@{
    ViewBag.Title = "BlogComments";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- #region Table -->

<table class="uk-table" dir="rtl">
    <thead>
        <tr>
            <th></th>
            <th>نام کاربر</th>
            <th>متن</th>
            <th>تاریخ</th>
            <th>تایید شده</th>
        </tr>
    </thead>
    <tbody>
        <!-- #region Foreach -->
        @foreach (var item in Model)
        {

            <tr>
                <td>@(Model.ToList().IndexOf(item) + 1)</td>
                <td>
                    <a href="#" onclick="viewClientInfo(@item.id);">
                        @item.TblClient.Name
                    </a>
                </td>
                <td>
                    @item.Body
                </td>
                <td>
                    @item.DateSubmited

                </td>
                <td>
                    <input type="checkbox" class="uk-checkbox" onchange="" @((item.IsValid) ? "checked" : "") />
                </td>
            </tr>
        }

        <!-- #endregion -->
    </tbody>
</table>

<!-- #region name -->
