@model DataLayer.Models.Regular.TblVideoCatagory


@using (Html.BeginForm("Edit", "VideoCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.id)
    @Html.HiddenFor(m=>m.Image)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "uk-text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "اسم گروه", htmlAttributes: new { @class = "uk-margin-small-bottom" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "uk-margin-bottom uk-margin-small-top uk-input", required = "required" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "uk-text-danger" })
            </div>
        </div>

        <div class="form-group">
            @if (Model.Image.Any())
            {
                <img src="~/Resources/VideoCatagory/Thumb/@Model.Image" class="thumbnail" style="width:100px;" />
            }
            @Html.LabelFor(model => model.Image, "عکس", htmlAttributes: new { @class = "uk-margin-small-bottom" })
            <div class="col-md-10">
                <input type="file" name="Image" value="آپلود عکس" />
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "uk-text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    ویرایش گروه
                </button>
            </div>
        </div>

    </div>
}



