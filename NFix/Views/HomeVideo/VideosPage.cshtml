@model IEnumerable<DataLayer.Models.Regular.TblVideo>
<section class="videos ">
    <div class="space-half"></div>
    <h3 class="clipped text-center">ویدیو های اخیر</h3>
    <content class="grid" dir="rtl">
        <!-- #region Video -->

        @foreach (var item in Model)
        {

            <div class="video column" dir="rtl">
                <div class="vid column">
                    <img class="thumbnail" src="~/Resources/Videos/Image/@item.MainImage" alt="" />
                    <a href="/HomeVideo/VideoView/@item.id" class="uk-icon" uk-icon="icon: play; ratio:4"></a>
                </div>
                <div class="uk-margin-small-top row">
                    <div class="tutor uk-margin-remove-top row">
                        @foreach (var j in item.TblTuotorVideoRel)
                        {
                            <a href="/HomeVideo/VideoView/@j.id">
                                <img class="profile-img uk-border-circle" src="~/Resources/User/@j.TblTutor.MainImage" />
                            </a>
                        }

                    </div>
                    <div class="title column uk-margin-auto-left uk-margin-small-right uk-margin-remove-top">
                        <a href="/HomeVideo/VideoView/@item.id">
                            <h5 class="uk-margin-auto-left">
                                @item.Title
                            </h5>
                        </a>
                        <div class="row">
                            <a href="#" class="tutor-link uk-margin-auto-left">
                                @foreach (var j in item.TblTuotorVideoRel)
                                {
                                    @j.TblTutor.Name
                                }
                            </a>
                            <span class="row">
                                <span>@item.ViewCount</span>
                                <span uk-icon="icon: play"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

        }


        <!-- #endregion -->
    </content>
</section>