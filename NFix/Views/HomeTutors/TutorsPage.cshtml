@model IEnumerable<DataLayer.Models.Regular.TblTutor>
@if (Model.Any())
{
    <ul id="tutors" class="owl-carousel uk-margin-small-top">

        @foreach (var item in Model)
        {

            <li>

                <a href="/TutorName/@item.id/@item.Name.Replace(" ","-")" class=" card uk-padding row">
                    <content>
                        <h3>@item.Name</h3>
                        <h5>
                            @item.Specialty
                        </h5>
                    </content>
                    <img src="~/Resources/Tutor/Thumb/@item.MainImage" alt="@item.Name" />
                </a>
            </li>
        }

    </ul>
}
