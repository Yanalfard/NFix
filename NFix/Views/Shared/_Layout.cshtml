            grecaptcha.execute('6LfeB-IZAAAAANpiuFCp-HURWmy1NGqmj-p4owkF', { action: 'contact_us' }).then(function (token) {
                $('.GoogleCapcha').val(token);
            });
        });
        function reloadRech() {
            grecaptcha.execute('6LfeB-IZAAAAANpiuFCp-HURWmy1NGqmj-p4owkF', { action: 'contact_us' }).then(function (token) {
                //document.getElementById("GoogleCapcha").value = token;
                $('.GoogleCapcha').val(token);
            });
        }
    </script>


    <script>
        function showLogin() {
            $.get('/HomeAccount/Login', function (result) {
                reloadRech();
                UIkit.modal(document.getElementById('Modal-Show')).show();
                $('#Modal-Body').html(result);
            });
        };

        function showRegister() {
            $.get('/HomeAccount/Register', function (result) {
                reloadRech();
                UIkit.modal(document.getElementById('Modal-Show')).show();
                $('#Modal-Body').html(result);

            });
        };
        function ForgotPassword() {
            $.get('/HomeAccount/ForgotPassword', function (result) {
                reloadRech();
                UIkit.modal(document.getElementById('Modal-Show')).show();
                $('#Modal-Body').html(result);
            });
        };
        function changePassword(name) {
            $.get('/HomeAccount/RecoveryPassword/' + name, function (result) {
                reloadRech();
                UIkit.modal(document.getElementById('Modal-Show')).show();
                $('#Modal-Body').html(result);
            });
        };
        function doneModal(form) {
            $("#overlay").fadeOut();
            UIkit.modal(document.getElementById(form)).hide();
            window.location.href = "/";
        }
    </script>

