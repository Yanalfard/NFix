<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")

    <!-- Project Css -->
    <link href="/Styles/Index.min.css" rel="stylesheet" />
    <link href="/Styles/Controls.min.css" rel="stylesheet" />

    <!-- UIkit CSS -->
    <link href="/Styles/UIKit/uikit.min.css" rel="stylesheet" />

    <!--Owl Carousel CSS-->
    <link href="/Styles/OwlCarousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="/Styles/OwlCarousel/owl.theme.default.min.css" rel="stylesheet" />

    <!-- UIkit JS -->
    <script src="/Scripts/UIKit/uikit.min.js"></script>
    <script src="/Scripts/UIKit/uikit-icons.js"></script>

    <!--Owl Carousel Scripts-->
    <script src="/Scripts/OwlCarousel/owl.carousel.min.js"></script>

    <!--Scroll Reveal-->
    <script src="https://unpkg.com/scrollreveal"></script>

    <!--Jquery-->
    <script src="~/Scripts/Jquery/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/Jquery/jquery.validate.min.js"></script>
    <script src="~/Scripts/Jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/Jquery/jquery.unobtrusive-ajax.min.js"></script>

    <!-- #region recaptcha -->
    <script src='https://www.google.com/recaptcha/api.js?hl=fa'></script>
    <!-- #endregion -->

</head>
<body>

    <div id="MobileNavigation" dir="rtl" uk-offcanvas="overlay: true ;flip: true">
        <div class="uk-offcanvas-bar column">

            <button class="uk-offcanvas-close" type="button" uk-close></button>

            <a href="/Home/Index" class="uk-margin-auto">
                <img src="/Resources/Svg/NFIX.svg" />
            </a>
            <ul class="column">

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin"))
                    {
                        <li>
                            <a href="/Admin/Blog/BlogTable">
                                <span uk-icon="user"></span>
                                پنل مدیریت
                            </a>
                        </li>
                    }
                    if (User.IsInRole("tutor"))
                    {
                        <li>
                            <a href="/Tuotor/Profile/Index">
                                <span uk-icon="user"></span>
                                پنل مربی
                            </a>
                        </li>
                    }
                    if (User.IsInRole("user"))
                    {
                        <li>
                            <a href="/User/Profile/Index">
                                <span uk-icon="user"></span>
                                پروفایل
                            </a>
                        </li>
                    }
                    <li>
                        <a href="/HomeAccount/LogOff">
                            <span uk-icon="sign-out"></span>
                            خروج
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="#" uk-toggle="target: #ModalLogin">
                            <span uk-icon="user"></span>
                            ورود / ثبت نام
                        </a>
                    </li>
                }

                <li>
                    <a href="#">
                        <span uk-icon="info"></span>
                        درباره ما
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span uk-icon="file-text"></span>
                        وبلاگ ها
                    </a>
                </li>
                <li>
                    <a href="#" mode="click" type="button">
                        <span uk-icon="play"></span>
                        ویدیو ها
                    </a>
                </li>
                <li>
                    <hr class="uk-margin-top uk-margin-remove-bottom" />
                </li>
                <li dir="rtl">
                    <a href="#">
                        <span uk-icon="phone"></span>
                        دانلود برنامه
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span uk-icon="home"></span>
                        خانه
                    </a>
                </li>
            </ul>

        </div>
    </div>

    <!-- #region Nav -->

    <nav class="uk-navbar-container" uk-navbar>

        <div class="uk-navbar-left uk-margin-small-left">
            <ul class="uk-navbar-nav">
                <li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-profile" type="button" href="#">
                            پروفایل
                        </a>
                        <div uk-drop="offset: -10" class="drop" dir="rtl">
                            <div class="mat uk-padding column">
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="nav-profile" uk-icon="user" type="button" href="/Admin/Blog/BlogTable">
                                        پنل مدیریت
                                    </a>
                                }
                                @if (User.IsInRole("tutor"))
                                {
                                    <a class="nav-profile" uk-icon="user" type="button" href="/Tuotor/Profile/Index">
                                        پنل مربی
                                    </a>
                                }
                                @if (User.IsInRole("user"))
                                {
                                    <a class="nav-profile row" type="button" href="/User/Profile/Index">
                                        <span uk-icon="user"></span>
                                        <span class="uk-margin-small-right">پروفایل</span>
                                    </a>
                                }
                                <a class="nav-profile  uk-margin-top" href="/HomeAccount/LogOff">
                                    <span uk-icon="sign-out"></span>
                                    <span class="uk-margin-small-right">خروج</span>
                                </a>
                            </div>
                        </div>


                    }
                    else
                    {
                        <a class="nav-profile" href="#" uk-toggle="target: #ModalLogin" type="button">
                            ورود
                        </a>
                    }

                    <!-- #region Register -->
                    <!--name-->
                    <!--tell-->
                    <!--user-->
                    <!--pass-->

                    <div id="ModalRegister" uk-modal>
                        @Html.Action("Register", "HomeAccount", new { area = "" })
                    </div>

                    @*@Html.Action("Register", "HomeAccount", new { area = "" })*@
                    <!-- #endregion -->
                    <!-- #region Login -->
                    <div id="ModalLogin" uk-modal>
                        @Html.Action("Login", "HomeAccount", new { area = "" })
                    </div>

                    <!--#endregion-->

                </li>

                <li>
                    <form class="uk-search uk-search-default uk-width-small uk-margin-top uk-margin-left ">
                        <a href="" uk-search-icon></a>
                        <input class="uk-search-input" type="search" dir="rtl" placeholder="جستجو...">
                    </form>
                </li>
            </ul>
        </div>

        <!-- #region Links -->

        <div class="uk-navbar-right uk-margin-small-right">
            <ul class="uk-navbar-nav">
                <li class="show-on-mobile">
                    <a class="hamburger-button uk-margin-auto" href="#MobileNavigation"
                       uk-icon="icon: menu ; ratio:1.6" uk-toggle="target: #MobileNavigation"></a>
                </li>
                <li class="hide-on-mobile">
                    <a href="#">درباره ما</a>
                </li>
                <li class="hide-on-mobile">
                    <a href="#">وبلاگ</a>
                </li>
                @*        <li class="hide-on-mobile"><a href="#">مربیان</a></li>*@
                <li class="hide-on-mobile">
                    <a href="#" mode="click" type="button">ویدیو</a>
                </li>
                <li>
                    <a href="/Home/Index">
                        <img src="/Resources/Svg/NFIX.svg" />
                    </a>
                </li>

            </ul>
        </div>

        <!-- #endregion -->

    </nav>

    <!-- #endregion -->

    @RenderBody()

