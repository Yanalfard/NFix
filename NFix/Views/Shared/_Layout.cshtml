    </div>

    <!-- #region Nav -->

    <nav class="uk-navbar-container noprint" uk-navbar>

        <div class="uk-navbar-left uk-margin-small-left">
            <ul class="uk-navbar-nav">
                <li>
                    @if (User.Identity.IsAuthenticated)
