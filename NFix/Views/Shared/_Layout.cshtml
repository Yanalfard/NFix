        <div class="uk-offcanvas-bar column">

            <button class="no-glow uk-offcanvas-close" type="button" uk-close></button>

            <a href="/Home/Index" class="uk-margin-auto">
                <img src="/Resources/Svg/NFIX.svg" />
            </a>
            <ul class="column">

                @if (User.Identity.IsAuthenticated)
