@model DataLayer.Models.Regular.TblBlog
<div class="blog column card uk-padding-remove ">
    <img src="~/Resources/Blogs/@Model.MainImage" class="uk-flex-1" alt="" />
    <content class="uk-padding-small uk-padding-remove-top uk-flex-1">
        <h4 class="uk-margin-remove">@Model.Title</h4>
        <p class="uk-margin-remove-bottom uk-margin-small-top">
            @Model.Body
        </p>
        <a class="uk-margin-auto-top" href="/BlogView/@Model.id/@Model.Title.Replace(" ","-")">...بیشتر</a>
    </content>
</div>