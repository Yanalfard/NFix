@model IEnumerable<DataLayer.Models.Regular.TblVideo>
@{
    ViewBag.Title = ViewBag.Searvh;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="space-nav-bottom"></div>

<section class="full-width column uk-padding uk-padding-remove-right uk-padding-remove-left">
    <form action="/HomeSearch/Index" class="row mat uk-margin-auto uk-padding-small uk-width-2-3-at-s uk-width-1-2-at-m uk-width-1-2-at-l uk-width-1-3-at-xl">
        <button class="button-icon no-glow" uk-search-icon></button>
        <input type="text" class="invisible-input uk-margin-auto-left" name="q" id="q" value="@ViewBag.Searvh" placeholder="جستجو..." />
    </form>

</section>
@if (Model.Any())
{
    <img class="full-width" src="~/Resources/Svg/Biscuits/Poly_2.svg" />
    <section class="videos column">
        @*<h4 class="clipped uk-margin-medium-top">پیشنهادی</h4>*@
        <content class="grid uk-margin-medium-bottom" dir="rtl">
            @foreach (var item in Model)
            {
                @Html.Partial("_VideoBlock", item)
            }

        </content>
    </section>
}
else
{
<div class="row uk-margin-medium uk-padding">
    <img class="uk-margin-auto  uk-width-1-4-at-s uk-width-1-3-at-m uk-width-1-5-at-l" src="~/Resources/Svg/NotFound.svg" />
</div>
}

