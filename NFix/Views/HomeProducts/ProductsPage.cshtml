@model IEnumerable<DataLayer.Models.Regular.TblProduct>

<div id="product" dir="ltr" class="clipped uk-margin-auto owl-carousel uk-margin-small-top">
    @foreach (var item in Model)
    {
        <div class="product-block column card uk-padding-remove">
            <!-- 342 * 280 -->
            @foreach (var j in item.TblProductImageRel)
            {
                <img src="/Resources/Product/Thumb/@j.TblImage.Image" alt="" />

            }
            <content class="uk-padding">
                <h4>@item.Name</h4>
                <div class="row star-container" dir="rtl">
                    <div class="Stars" style="--rating: @((float)item.Raiting / 20)" aria-label="Rating of this product is 2.3 out of 5."></div>
                    <label class="uk-margin-small-right">@((float)item.Raiting/20)</label>
                </div>

                <div class="row uk-margin-small-top uk-margin-left">
                    <div class="column">
                        @if (item.Discount > 0)
                        {
                            <span class="discount">@item.Price.ToString("#,0")</span>
                            @Math.Floor(item.Price - (double)((double)(item.Price * item.Discount) / 100)).ToString("#,0")
                        }
                        else
                        {
                            <span class="price">@item.Price.ToString("#,0")</span>
                        }

                    </div>
                    <button class="uk-margin-auto-left uk-margin-auto-top" onclick="ModalProduct(@item.id)">خرید</button>
                    @*<button class="uk-margin-auto-left uk-margin-auto-top">خرید</button>*@
                </div>
            </content>
        </div>
    }

</div>


