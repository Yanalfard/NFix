@model IEnumerable<DataLayer.Models.Regular.TblVideo>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="space-nav-bottom"></div>

<section class="full-width column uk-padding uk-padding-remove-right uk-padding-remove-left">
    <form action="/Search" class="row mat uk-margin-auto uk-padding-small uk-width-2-3-at-s uk-width-1-2-at-m uk-width-1-2-at-l uk-width-1-3-at-xl">
        <a href="" uk-icon="icon:search;ratio:1.5"></a>
        <input type="text" class="invisible-input uk-margin-auto-left" value="ویدیو ورزشی" placeholder="جستجو..." />
    </form>
</section>
<img src="~/Resources/Svg/Biscuits/Poly_2.svg" />
@if (Model.Any())
{
    <section class="videos column">
        @*<h4 class="clipped uk-margin-medium-top">پیشنهادی</h4>*@
        <content class="grid uk-margin-medium-bottom" dir="rtl">
            @foreach (var item in Model)
            {
                @Html.Partial("_VideoBlock", item)
            }

        </content>
    </section>
}
